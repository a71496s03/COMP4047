package hk.edu.hkbu.comp;

import java.io.*;

public class MyDatabase {
	static File file;
	static FileWriter myWriter;
	static BufferedWriter bw;
    static PrintWriter out;
	MyWebsite web;
	
	public MyDatabase(String filename){
		try {
			file = new File(filename); 
			if(file.createNewFile())
				System.out.println("Created File.");
			else
				System.out.println("Opened File.");
			myWriter = new FileWriter(file);
			bw = new BufferedWriter(myWriter);
		    out = new PrintWriter(bw);
		}catch(IOException e){
			e.printStackTrace();
		}
	} 
	
	public void newWebsite(String url) {
		web = new MyWebsite(url);
	}
	
	public void addTitle(String txt) {
		web.add("title", txt);
	}
	
	public void addContent(String txt) {
		web.add("content", txt);
	}
	
	public void save() {
		try {
			out.println(web.getJSON().toString());
			System.out.println("Successfully wrote to the file.");
		} catch (Exception e) {
			System.out.println("An error occurred.");
			e.printStackTrace();
		}
	}
}