package hk.edu.hkbu.comp;

import java.io.File;
import java.io.IOException;

public class MyDatabase {
	File file;
	MyWebsite web;
	
	public MyDatabase(String filename) throws IOException {
		file = new File(filename); 
		file.createNewFile();
	} 
	
	public void newWebsite(String url) {
		web = new MyWebsite(url);
	}
	
	public void addTitle(String word, int posotion) {
		web.addTitle(word, posotion);
	}
	
	public void addContent(String word, int posotion) {
		web.addContent(word, posotion);
	}
	
	public void save() {
		
	}
}