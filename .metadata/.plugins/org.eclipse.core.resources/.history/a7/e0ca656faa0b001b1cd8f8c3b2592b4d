package hk.edu.hkbu.comp;

import org.json.simple.*;
import java.util.HashMap;
import java.util.Map;


public class MyWebsite {
	public String url;
	Map < String, Integer > title = new HashMap <String, Integer> ();
	Map < String, Integer > content = new HashMap <String, Integer> ();
	
	public MyWebsite(String url) {
		this.url=url;
	}
	
	public void add(String type, String txt) {
		switch(type) {
		case "title":
			title = wordCount(txt);
			break;
		case "content":
			content = wordCount(txt);
			break;	
		}
	}
	
	private Map< String, Integer > wordCount(String txt) {
		Map < String, Integer > map = new HashMap <String, Integer> ();
		String[] tmp = txt.split(" ");
		for (String token: tmp) {
			String word = token.toLowerCase();
			if (map.containsKey(word)) {
				int count = map.get(word); // get word count 
			    map.put(word, count + 1); // override word count
			} else {
				map.put(word, 1); // initial word count to 1
			}
		}
		return map;
	}
	
	
}